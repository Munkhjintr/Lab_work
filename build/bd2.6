public class ClimbingStairs {
    static int climbStairs(int n) {
        if (n <= 2) {
            return n;
        }
        
        int[] dp = new int[n + 1];
        dp[1] = 1;
        dp[2] = 2;
        
        for (int i = 3; i <= n; i++) {
            dp[i] = dp[i - 1] + dp[i - 2];
        }
        
        return dp[n];
    }
    
    public static void main(String[] args) {
        int[] testCases = {1, 2, 3, 4, 5};
        
        for (int n : testCases) {
            int ways = climbStairs(n);
            System.out.println("Number of stairs: " + n);
            System.out.println("Different ways to climb: " + ways);
            System.out.println();
        }
    }
}




